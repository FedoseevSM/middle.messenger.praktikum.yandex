{
    "name": "cloud-messanger",
    "version": "1.0.0",
    "description": "---",
    "scripts": {
        "prepare": "husky",
        "start": "npm run build && node server.js",
        "dev": "set NODE_ENV=development && webpack serve --history-api-fallback --open",
        "build": "set NODE_ENV=production && webpack",
        "reset": "rimraf dist",
        "lint:sass": "stylelint src/styles/*.scss",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix --color",
        "test": "mocha --require ts-node/register --require ./mochaSetup.js 'src/**/*.spec.ts'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samgxlden/middle.messenger.praktikum.yandex.git"
    },
    "author": "Semyon Fedoseev",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/samgxlden/middle.messenger.praktikum.yandex/issues"
    },
    "homepage": "https://github.com/samgxlden/middle.messenger.praktikum.yandex#readme",
    "devDependencies": {
        "@tinkoff/eslint-config": "1.36.1",
        "@types/chai": "4.3.3",
        "@types/jsdom": "20.0.0",
        "@types/mocha": "9.1.1",
        "@types/proxyquire": "1.3.28",
        "@types/sinon": "10.0.13",
        "@types/uuid": "8.3.4",
        "@typescript-eslint/eslint-plugin": "5.36.1",
        "@typescript-eslint/parser": "5.36.1",
        "chai": "4.3.6",
        "css-loader": "6.7.1",
        "eslint": "8.23.0",
        "handlebars": "4.7.7",
        "handlebars-loader": "1.7.2",
        "html-loader": "4.2.0",
        "html-webpack-plugin": "5.5.0",
        "husky": "8.0.1",
        "lint-staged": "13.0.3",
        "mini-css-extract-plugin": "2.6.1",
        "mocha": "10.0.0",
        "nanoid": "3.3.4",
        "postcss": "8.4.17",
        "postcss-loader": "7.0.1",
        "postcss-preset-env": "7.8.2",
        "sass": "1.55.0",
        "sass-loader": "13.1.0",
        "style-loader": "3.3.1",
        "stylelint": "14.11.0",
        "stylelint-config-standard-scss": "5.0.0",
        "ts-loader": "9.4.1",
        "typescript": "4.8.2",
        "webpack": "5.74.0",
        "webpack-cli": "4.10.0",
        "webpack-dev-server": "4.11.1"
    },
    "dependencies": {
        "express": "4.18.1",
        "express-history-api-fallback": "2.2.1",
        "fs": "0.0.1-security",
        "helmet": "6.0.0",
        "jsdom": "20.0.1",
        "morgan": "1.10.0",
        "proxyquire": "2.1.3",
        "rimraf": "3.0.2",
        "sinon": "14.0.1",
        "ts-node": "10.9.1"
    },
    "targets": {
        "modern": {
            "engines": {
                "browsers": ">=50%"
            }
        }
    },
    "engines": {
        "node": ">=12"
    }
    ,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*ts": [
            "npm run test",
            "npm run lint:fix",
            "npm run lint:sass",
            "git add"
        ]
    }
}
